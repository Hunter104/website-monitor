#!/usr/bin/bash
: "${HOOK_URL:?}"
export LC_NUMERIC=C
tmp_error=$(mktemp -t website-monitor.XXXXXX)
trap 'rm -f $tmp_error' EXIT

send_message() { curl -X POST -F "content=$1" "$HOOK_URL"; }
query() { sqlite3 monitor-db "$1" || { echo "Query failed: $1" >&2; exit 1; } }

query 'SELECT * FROM Website' | \
while IFS='|' read -r id url name last_status _; do 
  time=$(curl -LIsSf --retry 6 --max-time 20 "$url" -w '%{time_total}' -o /dev/null -v 2>"$tmp_error")
  exit_code=$?

  case $exit_code in 
    0) status="UP" ;;
    22|28) status="DOWN" ;;
    *) status="$last_status" ;;
  esac
  
  query "UPDATE Website SET last_status='$status' WHERE id=$id;"
  printf "[%s] â†³ URL: %s â†³ Status: %s (Exit: %s) â†³ Response Time: %.2fs\n" "$name" "$url" "$status" "$exit_code" "$time"
  [[ $exit_code -ne 0 ]] && cat "$tmp_error"
  [[ $status == "$last_status" ]] && continue

  send_message "$( [[ $status == UP ]] && echo "âœ… **$name** estÃ¡ online!" || echo "âŒ **$name** estÃ¡ fora do ar! ğŸ˜" )"
done
